<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width ="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.myapplication1050403.ShowInWebview"

    >




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/lin1"
        >

        <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/ed01"
            android:layout_weight="0.85" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b01"
            android:text="按我"
            />


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin1"

        >

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w01"

            />

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w02"

            android:layout_below="@+id/w01"
            android:layout_alignParentStart="true" />

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w03"

            android:layout_below="@+id/w02"
            android:layout_alignParentStart="true" />

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w04"

            android:layout_below="@+id/w03"
            android:layout_alignParentStart="true" />

        <WebView
            android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/w05"

            android:layout_below="@+id/w04"
            android:layout_alignParentStart="true" />

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w06"

            android:layout_below="@+id/w05"
            android:layout_alignParentStart="true" />

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w07"

            android:layout_below="@+id/w06"
            android:layout_alignParentStart="true" />

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w08"

            android:layout_below="@+id/w07"
            android:layout_alignParentStart="true">
        </WebView>

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w09"

            android:layout_above="@+id/w04"
            android:layout_toStartOf="@+id/w05">
        </WebView>

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w011"
            android:layout_alignTop="@+id/w02"
            android:layout_toEndOf="@+id/w02">
        </WebView>

        <WebView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/w010"

            android:layout_above="@+id/w02"
            android:layout_toEndOf="@+id/w01">
        </WebView>

    </RelativeLayout>


</RelativeLayout>
