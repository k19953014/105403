<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.draggridview.MainView"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginTop="240dp"


        >

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/add"
            android:id="@+id/NewLayout"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearLayout" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/mystyle"
            android:id="@+id/MyLayout"

            android:layout_alignTop="@+id/NewLayout"
            android:layout_centerHorizontal="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:id="@+id/t01"
            android:background="@drawable/newword"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/mystyleword"
            android:layout_toRightOf="@+id/t01"
            />

    </LinearLayout>


</RelativeLayout>
